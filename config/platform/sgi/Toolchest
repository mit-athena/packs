# Dont allow SGI mode until we fix cascade widget

Toolchest*sgiMode: False

#enable schemes for the toolchest
*useSchemes: all

#cosmetic resources, may be overridden by schemes

*fontList:			-adobe-helvetica-bold-o-normal--14-*
*geometry:		+10+35
#make sure geometry resource doesn't affect tear offs
Toolchest*TransientShell*geometry:
toolchest*TransientShell*geometry:
ToolChest*TransientShell*geometry:
*background:			SGIGray76
*decalForeground:		SGIDarkGray
*showDecal:			TRUE
*chest.marginWidth:		0
*chest.marginHeight:		0
Toolchest.borderWidth:		1

# Place the menus in the popup planes.  To move them to the normal
# planes set menuVisualType to normal and menuVisualDepth to 0.  If
# you are going to use tear off menus (see below), this is a good idea

*menuVisualType:		popup
*menuVisualDepth:		2

# If you wish to enable tear offs, you should set this to TRUE.
# However, unless you remove the menus from the popup planes by also
# setting menuVisualType to normal and menuVisualDepth to 0, the
# tear off menus will change colors any time any other application
# uses the popup planes.

*useTearOffs:			FALSE

# force the menu to be posted by menu button 1 (which is the default
# anyway).  Internal code remaps button 3 to button 1, so don't change
# this to be button 3.

Toolchest*menuPost: <Btn1Down>

