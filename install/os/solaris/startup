#!/bin/sh
#
#       @(#)startup.sh 1.1 92/09/15 SMI
#
# Copyright (c) 1992 by Sun Microsystems, Inc.
#
# run as the 5.0-install root sh
# it sets up the env & runs athenainstall
#

case "$1" in
start)
    # Fall through to start the install.
    ;;
stop)
    exit 0
    ;;
*)
    echo "Usage: $0 {start|stop}" 1>&2
    exit 1
    ;;
esac

# first thing, source /etc/TIMEZONE, so TZ (and maybe others) set
. /etc/TIMEZONE

SHELL=/sbin/sh
export SHELL

PATH=/sbin:/usr/bin:/usr/sbin:/etc:.:$PATH
export PATH

# make home dir to a writeable place
HOME=/tmp
export HOME

trap /sbin/sh 1 2 15  # ignore traps

sh /util/athenainstall >>/dev/console 2<>/dev/console </dev/console
