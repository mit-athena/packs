#!/bin/sh

cp $1/packs/config/masks $2
cp $1/packs/config/local-lockers.conf $2
cp $1/packs/config/os/$OS/passwd.fallback $2
cp $1/packs/config/os/$OS/syslog.conf $2
cp $1/packs/update/os/$OS/update_ws.sh $2
cp $1/packs/update/os/$OS/update_ws.8 $2
cp $1/packs/config/os/$OS/XTerm $2
if [ linux = "$OS" ]; then
  cp $1/packs/config/os/$OS/man.config $2
  cp $1/packs/config/os/$OS/athena.cron $2
fi
if [ solaris = "$OS" ]; then
  cp $1/packs/config/os/$OS/crontab.root $2
fi
