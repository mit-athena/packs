#!/bin/sh

# Handle the removal of the info files in a package:  In addition to
# removing the file, we delete its entry from the dir file in the info
# directory.

# Locate the install-info executable.
if [ -x /usr/sfw/bin/install-info ]; then
  install_info=/usr/sfw/bin/install-info
elif [ -x $PKG_INSTALL_ROOT/usr/sfw/bin/install-info ]; then
  install_info=$PKG_INSTALL_ROOT/usr/sfw/bin/install-info
elif [ -x /usr/athena/bin/install-info ]; then
  install_info=/usr/athena/bin/install-info
else
  install_info=$PKG_INSTALL_ROOT/usr/athena/bin/install-info
fi

# pkgrm supplies the path names on our standard input.
while read dest ; do
  $install_info --delete --info-dir=`dirname $dest` $dest 2>/dev/null
  rm -f $dest
done      

exit 0
