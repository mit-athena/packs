#!/bin/sh

# Change /etc/athena/attach.conf to class config.
# Add the attachtab directories.
sed -e 's|^f none \(etc/athena/attach\.conf\) |e config \1 |' \
    -e '$a\
d none var/athena/attachtab/directory 0755 root other\
d none var/athena/attachtab/locker 0755 root other\
d none var/athena/attachtab/mountpoint 0755 root other'
