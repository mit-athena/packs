#!/bin/sh

# Change various dotfiles to class config.
sed -e 's|^f none \(\.bashrc\) |e config \1 |' \
    -e 's|^f none \(\.bash_login\) |e config \1 |' \
    -e 's|^f none \(\.cshrc\) |e config \1 |' \
    -e 's|^f none \(\.login\) |e config \1 |' \
    -e 's|^f none \(\.profile\) |e config \1 |' \
    -e 's|^f none \(\.xsession\) |e config \1 |' \
    -e 's|^f none \(etc/\.cshrc\) |e config \1 |' \
    -e 's|^f none \(etc/\.login\) |e config \1 |' \
    -e 's|^f none \(etc/profile\) |e config \1 |'
