#!/bin/sh

MOZILLA_FIVE_HOME=/usr/athena/lib/firefox

umask 022

# Set up a proper environment for the registration commands.
PATH=/usr/athena/bin:/bin/athena:/etc/athena:$PATH
USER=root
HOME=/
ATHENA_LOGIN_SESSION=$$
export PATH USER HOME ATHENA_LOGIN_SESSION

# Rebuild the registries.
chroot ${PKG_INSTALL_ROOT:-/} $MOZILLA_FIVE_HOME/build-registries

# Register components and extensions.
chroot ${PKG_INSTALL_ROOT:-/} /usr/athena/bin/firefox -register

exit 0
