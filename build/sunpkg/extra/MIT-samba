#!/bin/sh

etcdir=/etc/athena
initd=/etc/init.d
rc2=/etc/rc2.d
rc0=/etc/rc0.d

mkdir -p $2$etcdir
mkdir -p $2$initd
mkdir -p $2$rc2
mkdir -p $2$rc0

cp $1/packs/config/smb.conf $2$etcdir
chmod 644 $2$etcdir/smb.conf

cp $1/packs/maint/os/$OS/athena-samba.rc $2$initd/athena-samba
chmod 755 $2$initd/athena-samba
rm -f $2$rc2/S91athena-samba
ln -s ../init.d/athena-samba $2$rc2/S91athena-samba
rm -f $2$rc0/K91athena-samba
ln -s ../init.d/athena-samba $2$rc0/K91athena-samba

