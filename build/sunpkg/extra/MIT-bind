#!/bin/sh

etcdir=/etc
initd=/etc/init.d
rc2=/etc/rc2.d

mkdir -p $2$etcdir
mkdir -p $2$initd
mkdir -p $2$rc2

cp $1/packs/config/named.conf $2$etcdir
chmod 644 $2$etcdir/named.conf
cp $1/packs/config/named.localhost $2$etcdir
chmod 644 $2$etcdir/named.localhost
cp $1/packs/config/named.localhost.rev $2$etcdir
chmod 644 $2$etcdir/named.localhost.rev
cp $1/packs/config/named.root $2$etcdir
chmod 644 $2$etcdir/named.root
cp $1/packs/config/resolv.conf $2$etcdir
chmod 644 $2$etcdir/resolv.conf
cp $1/packs/maint/os/$OS/athena-bind.rc $2$initd/athena-bind
chmod 755 $2$initd/athena-bind
rm -f $2$rc2/S72athena-bind
ln -s ../init.d/athena-bind $2$rc2/S72athena-bind
