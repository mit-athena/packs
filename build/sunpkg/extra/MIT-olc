#!/bin/sh

initd=/etc/init.d
rc2=/etc/rc2.d
rc0=/etc/rc0.d

mkdir -p $2$initd
mkdir -p $2$rc2
mkdir -p $2$rc0

cp $1/packs/maint/os/$OS/athena-olc.rc $2$initd/athena-olc
chmod 755 $2$initd/athena-olc
rm -f $2$rc2/S91athena-olc
ln -s ../init.d/athena-olc $2$rc2/S91athena-olc
rm -f $2$rc0/K91athena-olc
ln -s ../init.d/athena-olc $2$rc0/K91athena-olc
