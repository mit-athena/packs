#!/bin/sh

etcdir=/etc
initd=/etc/init.d
rc2=/etc/rc2.d
rc0=/etc/rc0.d

mkdir -p $2$etcdir
mkdir -p $2$initd
mkdir -p $2$rc2
mkdir -p $2$rc0

cp $1/packs/config/lpd.conf $2$etcdir
chmod 644 $2$etcdir/lpd.conf
cp $1/packs/config/lpd.perms $2$etcdir
chmod 644 $2$etcdir/lpd.perms
cp $1/packs/maint/os/$OS/athena-lpd.rc $2$initd/athena-lpd
chmod 755 $2$initd/athena-lpd
rm -f $2$rc2/S91athena-lpd
ln -s ../init.d/athena-lpd $2$rc2/S91athena-lpd
rm -f $2$rc0/K91athena-lpd
ln -s ../init.d/athena-lpd $2$rc0/K91athena-lpd
