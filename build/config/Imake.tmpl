#endif
#ifndef CONFDIR
#define CONFDIR ${TOP}/imake
#endif
#ifndef ALibDir
#define ALibDir /usr/athena/lib
#endif
#ifndef LintCFlag
#define LintCFlag -C
#endif

TOP = TOPDIR
CURRENT_DIR = CURDIR
DESTDIR=
CONFIGSRC = CONFDIR

IRULESRC = $(CONFIGSRC)		
IMAKE= ${IRULESRC}/imake -I${IRULESRC}
ICONFIGFILE = ${IRULESRC}/Imake.tmpl ${IRULESRC}/Imake.rules \
	${IRULESRC}/site.def Imakefile
MKDIRHEIR= $(CONFIGSRC)/mkdirheir
ATHLIBDIR=ALibDir
LINTCFLAG=LintCFlag

#include "Imake.rules"

all::

