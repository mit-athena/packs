#!/bin/sh
# $Id: Xreset,v 1.4 2003-08-05 17:15:28 zacheiss Exp $

# Xreset
#
# This program is run as root by xlogin to reclaim ownership of the
# devices granted to the user in Xstartup.

cd /dev

# Reclaim the audio devices.
chown root:sys dsp* audio* midi* mixer* sequencer
chmod      640 dsp* audio* midi* mixer* sequencer

# Reclaim cdrom and floppy devices.
chown --dereference root:disk cdrom
chmod 666 cdrom

chown root:floppy fd0*
chmod 666 fd0*

zipdev=`awk '/\/mnt\/zip/ {print $1}' /etc/fstab`
if [ -n "$zipdev" -a -e "$zipdev" ]; then
  chown root:sys $zipdev
  chmod 666 $zipdev
fi

# Turn off power saving.
/usr/X11R6/bin/xset -display :0.0 -dpms

exit 0
