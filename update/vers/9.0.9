#!/bin/sh

case $HOSTTYPE in
sun4)
  if [ sun4u = "$SUNPLATFORM" ]; then
    echo "SUNWifbgl"				>> "$LINKPACKAGES"
    echo "SUNWifbgx"				>> "$LINKPACKAGES"
    echo "TSIpgx.u"				>> "$LOCALPACKAGES"
    echo "TSIpgx.us"				>> "$LOCALPACKAGES"
    echo "TSIpgxw"				>> "$LOCALPACKAGES"
    echo "TSIpgxx.u"				>> "$LOCALPACKAGES"
    echo "TSIpgxx.us"				>> "$LOCALPACKAGES"
  fi
  ;;
sgi)
  echo "/etc/athena/athinfo.defs"		>> "$CONFCHG"
  ;;
esac

MACHINE=`/bin/athena/machtype -c`
ed -s /etc/athena/rc.conf << EOS
/^MACHINE/s|=[^;]*|=$MACHINE|
w
q
EOS
