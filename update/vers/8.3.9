#!/bin/sh

case "$HOSTTYPE" in
sun4)
	echo "/etc/mail/sendmail.cf"			>> "$CONFCHG"
	echo "/etc/inet/services"			>> "$CONFCHG"
	;;

sgi)
	echo "/etc/sendmail.cf"				>> "$CONFCHG"
	echo "/etc/services"				>> "$CONFCHG"
	# Remove netscape configuration package.
	echo "remove netscape.sw.configs" >> "$LINKPACKAGES.applications"
	;;
esac
