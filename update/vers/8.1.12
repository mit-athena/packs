#!/bin/sh

case "$HOSTTYPE" in
sun4)
	# We don't want to add NETDEV with the value of NODEV, so
	# add it with the value le0.  Unfortunately, the rc.conf file
	# doesn't get backed up before this step, but it's only for
	# one version.  (There is precedent in 8.0.3.)
	if [ -z "$NETDEV" ]; then
		cat >> /etc/athena/rc.conf << EOM
NETDEV=le0;		export NETDEV		#  Network interface
EOM
	fi

	sed -e '/	\/usr	/s/	yes	/	no	/' \
		< /etc/vfstab > /etc/vfstab.new
	rm -f /etc/vfstab.old
	ln /etc/vfstab /etc/vfstab.old
	mv /etc/vfstab.new /etc/vfstab
	;;

sgi)
	;;
esac
