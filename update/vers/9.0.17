#!/bin/sh

case $HOSTTYPE in
sun4)
  echo "108528-08"				>> "$PATCHES"
  echo "110383-01"				>> "$PATCHES"
  echo "108940-29"				>> "$PATCHES"
  echo "108434-02"				>> "$PATCHES"
  echo "108435-02"				>> "$PATCHES"
  echo "108604-17"				>> "$PATCHES"
  echo "108605-16"				>> "$PATCHES"
  echo "108606-15"				>> "$PATCHES"
  echo "108974-11"				>> "$PATCHES"
  echo "109793-08"				>> "$PATCHES"
  echo "110693-01"				>> "$PATCHES"
  echo "110208-09"				>> "$PATCHES"

  if [ sun4u = "$SUNPLATFORM" ]; then
    echo "SUNWdmfex"				>> "$LOCALPACKAGES"
    echo "SUNWlomm"				>> "$LOCALPACKAGES"
    echo "SUNWlomr"				>> "$LOCALPACKAGES"
    echo "SUNWlomu"				>> "$LOCALPACKAGES"
  fi

  echo "OSCHANGES=true"				>> "$CONFVARS"
  ;;

sgi)
  # Install some patches locally.
  echo "i patchSG0004270.eoe_sw.base"		>> "$LOCALPACKAGES.patches"
  echo "i patchSG0004354.eoe_sw.base"		>> "$LOCALPACKAGES.patches"

  # Make sure the above packages do not get reinstalled in symlink mode.
  echo "k patchSG0004270.eoe_sw.base"		>> "$LINKPACKAGES.patches"
  echo "k patchSG0004354.eoe_sw.base"		>> "$LINKPACKAGES.patches"

  # We have updated the OS.
  echo "OSCHANGES=true"				>> "$CONFVARS"
  ;;

esac
