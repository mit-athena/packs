#!/bin/sh -
# Version-specific update script for 7.7A

echo "NEWTTYS=true"			>> ${CONFVARS}

case ${MACH} in
DS*)
        echo "NEWUNIX=true"		>> ${CONFVARS}
	;;
RSAIX)
	chque -qbsh -a"up = FALSE"
	;;
SUN*)
	rm -rf /etc/athena/login
	rm -rf /usr/openwin
	rm /etc/rc*.d/*     
	echo "NEWUNIX=true"		>> ${CONFVARS}
	echo "NEWBOOT=true"		>> ${CONFVARS}
	echo "NEWDEV=true"		>> ${CONFVARS}
esac
