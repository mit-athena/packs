#!/bin/sh

echo "/etc/athena/attach.conf"				>> "$CONFCHG"

case "$HOSTTYPE" in
sun4)
	echo "MINIROOT=true"				>> "$CONFVARS"
	echo "NEWOS=true"				>> "$CONFVARS"
	echo "NEWDEVS=true"				>> "$CONFVARS"
	echo "OSCHANGES=true"				>> "$CONFVARS"

	cat "$LIBDIR/solaris27-8"			>> "$DEADFILES"

	# This file will be inaccurate after we remove the pkgs and patches 
	echo "/var/sadm/install/contents"		>> "$DEADFILES"

	# Create list of old packages and old patches to be removed
	# from the DB.
	cat "$LIBDIR/solaris27-pkgs"			>> "$OLDPKGS"
	cat "$LIBDIR/solaris27-ptchs"			>> "$OLDPTCHS"

	# Create the lists of packages and patches to install.
	cat "$LIBDIR/solaris8-local-$SUNPLATFORM"	>> "$LOCALPACKAGES"
	cat "$LIBDIR/solaris8-nolocal-$SUNPLATFORM"	>> "$LINKPACKAGES"
	cat "$LIBDIR/solaris8-patches.9.0.0"		>> "$PATCHES"
	# netmasks file has changed format 
	ipaddr=`cat /etc/netmasks | grep 18 |awk '{print $1}'`
        set -- `/etc/athena/netparams "$ipaddr"`
        netmask=$1
	net=$2
        echo "$net $netmask" >/etc/netmasks
	;;

sgi)
	;;
esac
